                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="row" style="text-align:start!important;">
                            <div class="col-6">
                                <b>Informacion Alistamiento</b>
                            </div>
                            <div class="col-6">
                                <b>Fecha: </b><t t-esc="fecha"/>
                            </div>
                        </div>
