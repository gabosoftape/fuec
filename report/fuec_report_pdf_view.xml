<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="fuec_layout_pdf">
        <div class="header">
            <div class="row">
                <div class="col-6">
                    <img src="http://50.116.2.74/fuec/images/mintransporte.png" style="max-height: 100px;" alt=""/>
                </div>
                <div class="col-6 text-right">
                    <img src="http://50.116.2.74/fuec/images/logos/Rolan_logo.jpg" alt="" style="width:100%; max-width: 300px; max-height: 100px;"/>
                </div>
            </div>
        </div>

        <div class="article o_report_layout_standard">
            <t t-raw="0"/>
        </div>

    </template>
    <template id="fuec_report_template">
