<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="fuec_layout_pdf">
        <div class="header">
            <div class="row" style="padding-top:2rem;">
                <div class="col-6">
                    <img src="http://50.116.2.74/fuec/images/mintransporte.png" style="max-height: 100px;" alt=""/>
                </div>
                <div class="col-6 text-right">
                    <img src="http://50.116.2.74/fuec/images/logos/Rolan_logo.jpg" alt="" style="width:100%; max-width: 300px; max-height: 100px;"/>
                </div>
            </div>
        </div>

        <div class="article o_report_layout_standard">
            <t t-raw="0"/>
        </div>

    </template>
    <template id="fuec_report_template">
        <t t-call="web.html_container">
            data = {
                    'report_type': 'pdf',
                    'folio': folio,
                    'fuec': my_fuec,

                    'id_type': id_type,
                    'id_document': id_document,

                    'responsable': responsable,
                    'ruta': ruta,
                    'descripcion_recorrido': descripcion_recorrido,
                    'convenio': convenio,
                    'ut_con': ut_con,
                    'inicio_contrato': inicio_contrato,
                    'fin_contrato': fin_contrato,
                    'vehiculo': vehiculo,
                    'conductores': conductores,
                    'qr': qr,
                    'pseudouser': pseudouser,
                    'firma': firma,
                }
                <t t-call="fuec.fuec_layout_pdf">
                    <div class="page">
                        <div class="row" style="text-align:center!important;">
                            <div class="col-12" style="font-size:12px;">
                                 <b>FORMATO ÚNICO DE EXTRACTO DEL CONTRATO DEL SERVICIO <br/>PÚBLICO DE TRANSPORTE TERRESTRE AUTOMOTOR ESPECIAL</b>
                                    <br/>
                                    <b style="color:red;"><t t-esc="contract_id"/></b>
                                    <p>&amp;nbsp;</p>
                                <hr/>
                            </div>
                        </div>
                        <div style="color:black!important;">
                            <div class="row" style="text-align:start;">
                                <div class="col-8">
                                    <b>Razon social:</b> <t t-esc="razonsocial"/>
                                </div>
                                <div class="col-4">
                                    <b><t t-esc="id_type"/></b>: <t t-esc="id_document"/>
                                </div>
                            </div>
                            <div class="row" style="text-align:start;">
                                <div class="col-8">
                                    <b>Contratante:</b> <t t-esc="contratista.nombre"/>
                                </div>
                                <div class="col-4">
                                    <b>NIT</b>: <t t-esc="contratista.nit"/>
                                </div>
                            </div>
                            <div class="row" style="text-align:start;">
                                <div class="col-12">
                                    <b>Objeto del contrato:</b> <t t-esc="contract_id"/>
                                </div>
                            </div>
                            <div class="row" style="text-align:start;">
                                <div class="col-8">
                                    <b>Responsable:</b>
                                </div>
                                <div class="col-4">
                                    <b>@type_id</b>: @no_id
                                </div>
                            </div>
                            <div class="row" style="text-align:start;">
                                <div class="col-12">
                                    <b>Origen - Destino:</b>
                                </div>
                            </div>
                            <div class="row" style="text-align:start;">
                                <div class="col-12">
                                    <b>Descripcion del recorrido:</b>
                                </div>
                            </div>
                            <div class="row" style="text-align:start;">
                                <div class="col-3">
                                    <b>Convenio</b> @x
                                </div>
                                <div class="col-3">
                                    <b>Consorcio</b> @x
                                </div>
                                <div class="col-3">
                                    <b>Union temporal</b> @x
                                </div>
                                <div class="col-3">
                                    <b>UT con:</b> @x
                                </div>
                            </div>
                            <div class="row" style="text-align:start;">
                                <div class="col-12 text-center">
                                    <b>Vigencia del contrato</b>
                                </div>
                            </div>
                            <div class="row" style="text-align:start;">
                                <div class="col-6">
                                    <b>Desde:</b>@x
                                </div>
                                <div class="col-6">
                                    <b>Hasta:</b> @x
                                </div>
                            </div>
                            <hr/>
                            <div class="row" style="text-align:center;">
                                <div class="col-12 text-center">
                                    <b>Caracteristicas del vehiculo</b>
                                </div>
                            </div>
                            <table cellpadding="1" cellspacing="1" border="1" style="text-align:start;">
                                <thead>
                                    <tr>
                                        <th class="text-center">Placa</th>
                                        <th class="text-center">Modelo</th>
                                        <th class="text-center">Marca</th>
                                        <th class="text-center">Clase</th>
                                        <th class="text-center">No. Interno</th>
                                        <th class="text-center">No. Operación</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-center col-2">-</td>
                                        <td class="text-center col-2">-</td>
                                        <td class="text-center col-2">-</td>
                                        <td class="text-center col-2">-</td>
                                        <td class="text-center col-2">-</td>
                                        <td class="text-center col-2">-</td>
                                    </tr>

                                </tbody>

                            </table>
                            <hr/>
                            <div class="row" style="text-align:center;">
                                <div class="col-12 text-center">
                                    <b>Conductores</b>
                                </div>
                            </div>
                            <table cellpadding="1" cellspacing="1" border="1" style="text-align:start;">
                                <thead>
                                    <tr>
                                        <th class="text-center">Nombres y Apellidos</th>
                                        <th class="text-center">No. Identificacion</th>
                                        <th class="text-center">No. Licencia</th>
                                        <th class="text-center">Vigencia</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-center col-3">-</td>
                                        <td class="text-center col-3">-</td>
                                        <td class="text-center col-3">-</td>
                                        <td class="text-center col-3">-</td>
                                    </tr>
                                </tbody>

                            </table>
                             <div class="row" style="text-align:center;">
                                <div class="col-3 text-center">
                                    <b>@qr</b>
                                </div>
                                 <div class="col-3 text-center">
                                    <b>@info-company</b>
                                </div>
                                 <div class="col-3 text-center">
                                    <b>@ST</b>
                                </div>
                                 <div class="col-3 text-center">
                                    <b>@firma</b>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <br></br>
                    <div class="page">
                    </div>
                </t>

        </t>


     </template>
</odoo>