<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="fuec_layout_pdf">
        <div class="header">
            <div class="row" style="padding-top:2rem;">
                <div class="col-6">
                    <img src="http://50.116.2.74/fuec/images/mintransporte.png" style="max-height: 100px;" alt=""/>
                </div>
                <div class="col-6 text-right">
                    <img src="http://50.116.2.74/fuec/images/logos/Rolan_logo.jpg" alt="" style="width:100%; max-width: 300px; max-height: 100px;"/>
                </div>
            </div>
        </div>

        <div class="article o_report_layout_standard">
            <t t-raw="0"/>
        </div>

    </template>
    <template id="fuec_report_template">
        <t t-call="web.html_container">
                <t t-call="fuec.fuec_layout_pdf">
                    <div class="page">
                        <div class="row" style="text-align:center!important;">
                            <div class="col-12" style="font-size:12px;">
                                 <b>FORMATO ÚNICO DE EXTRACTO DEL CONTRATO DEL SERVICIO <br/>PÚBLICO DE TRANSPORTE TERRESTRE AUTOMOTOR ESPECIAL</b>
                                    <br/>
                                    <b style="color:red;"><t t-esc="contract_id"/></b>
                                    <p>&amp;nbsp;</p>
                                <hr/>
                            </div>
                        </div>
                        <div style="color:black!important;">
                            <div class="row" style="text-align:start;">
                                <div class="col-8">
                                    <b>Razon social:</b> <t t-esc="razonsocial"/>
                                </div>
                                <div class="col-4">
                                    <b><t t-esc="id_type"/></b>: <t t-esc="id_document"/>
                                </div>
                            </div>
                            <div class="row" style="text-align:start;">
                                <div class="col-8">
                                    <b>Contratante:</b> <t t-esc="contratista"/>
                                </div>
                                <div class="col-4">
                                    <b>NIT</b>:
                                </div>
                            </div>
                            <div class="row" style="text-align:start;">
                                <div class="col-12">
                                    <b>Objeto del contrato:</b> <t t-esc="contract_object"/>
                                </div>
                            </div>
                            <div class="row" style="text-align:start;">
                                <div class="col-8">
                                    <b>Responsable:</b> <t t-esc="responsable"/>
                                </div>
                                <div class="col-4">
                                    <b><t t-esc="responsable"/></b>: <t t-esc="responsable"/>
                                </div>
                            </div>
                            <div class="row" style="text-align:start;">
                                <div class="col-12">
                                    <b>Origen - Destino:</b> <t t-esc="ruta"/>
                                </div>
                            </div>
                            <div class="row" style="text-align:start;">
                                <div class="col-12">
                                    <b>Descripcion del recorrido:</b> <t t-esc="ruta"/>
                                </div>
                            </div>
                            <div t-if="convenio" class="row" style="text-align:start;">
                                <t t-if="convenio == 'cv'">
                                    <div class="col-4">
                                        <b>Convenio</b> X
                                    </div>
                                    <div class="col-4">
                                        <b>Consorcio</b>
                                    </div>
                                    <div class="col-4">
                                        <b>Union temporal</b>
                                    </div>
                                </t>
                                <t t-if="convenio == 'cv'">
                                    <div class="col-4">
                                        <b>Convenio</b>
                                    </div>
                                    <div class="col-4">
                                        <b>Consorcio</b> X
                                    </div>
                                    <div class="col-4">
                                        <b>Union temporal</b>
                                    </div>
                                </t>
                                <t t-else="">
                                    <div class="col-3">
                                        <b>Convenio</b>
                                    </div>
                                    <div class="col-3">
                                        <b>Consorcio</b>
                                    </div>
                                    <div class="col-3">
                                        <b>Union temporal</b> X
                                    </div>
                                    <div class="col-3">
                                        <b>UT Con: </b> <t t-esc="ut_con"/>
                                    </div>
                                </t>

                            </div>
                            <div class="row" style="text-align:start;">
                                <div class="col-12 text-center">
                                    <b>Vigencia del contrato</b>
                                </div>
                            </div>
                            <div class="row" style="text-align:start;">
                                <div class="col-6">
                                    <b>Desde:</b><t t-esc="inicio_contrato"/>
                                </div>
                                <div class="col-6">
                                    <b>Hasta:</b><t t-esc="fin_contrato"/>
                                </div>
                            </div>
                            <hr/>
                            <div class="row" style="text-align:center;">
                                <div class="col-12 text-center">
                                    <b>Caracteristicas del vehiculo</b>
                                </div>
                            </div>
                            <table cellpadding="1" cellspacing="1" border="1" style="text-align:start;">
                                <thead>
                                    <tr>
                                        <th class="text-center">Placa</th>
                                        <th class="text-center">Modelo</th>
                                        <th class="text-center">Marca</th>
                                        <th class="text-center">Clase</th>
                                        <th class="text-center">No. Interno</th>
                                        <th class="text-center">No. Operación</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-center col-2">-</td>
                                        <td class="text-center col-2">-</td>
                                        <td class="text-center col-2">-</td>
                                        <td class="text-center col-2">-</td>
                                        <td class="text-center col-2">-</td>
                                        <td class="text-center col-2">-</td>
                                    </tr>

                                </tbody>

                            </table>
                            <hr/>
                            <div class="row" style="text-align:center;">
                                <div class="col-12 text-center">
                                    <b>Conductores</b>
                                </div>
                            </div>
                            <table cellpadding="1" cellspacing="1" border="1" style="text-align:start;">
                                <thead>
                                    <tr>
                                        <th class="text-center">Nombres y Apellidos</th>
                                        <th class="text-center">No. Identificacion</th>
                                        <th class="text-center">No. Licencia</th>
                                        <th class="text-center">Vigencia</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="conductores" t-as="conductor">
                                        <tr>
                                            <td class="text-center col-3">-</td>
                                            <td class="text-center col-3">-</td>
                                            <td class="text-center col-3">-</td>
                                            <td class="text-center col-3">-</td>
                                        </tr>
                                    </t>

                                </tbody>

                            </table>
                             <div class="row" style="text-align:center;">
                                <div class="col-3 text-center">
                                    <b><t t-esc="qr"/></b>
                                </div>
                                 <div class="col-3 text-center">
                                    <b><t t-esc="vehiculo"/></b>
                                </div>
                                 <div class="col-3 text-center">
                                    <img src="http://50.116.2.74/fuec/images/supertransporte.jpeg" width="200px" alt=""/>
                                </div>
                                 <div class="col-3 text-center">
                                    <img class="firma" t-attf-src="data:image/png;base64,#{firma}" style="width:100%; max-width: 200px; max-height: 200px;"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <br></br>
                    <div class="page">
                    </div>
                </t>

        </t>


     </template>
</odoo>