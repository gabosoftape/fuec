    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="alistamientos_list">
      <field name="name">Tree alistamientos</field>
      <field name="model">gpscontrol.alistamientos</field>
      <field name="arch" type="xml">
        <tree>
          <field name="folio"/>
          <field name="partner_id"/>
          <field name="vehiculo"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

