    <!-- actions -->
    <menuitem name="Sincronizar" id="menu_test" parent="alistamientos_menu_2" action="sync_action_window"/>
    <menuitem name="Grupos" id="sync_group_test" parent="alistamientos_menu_2" action="group_test_action_window"/>
    <menuitem name="Unidades" id="sync_unit_test" parent="alistamientos_menu_2" action="unit_test_action_window"/>
    <menuitem name="Usuarios" id="menu_pseudouser_list" parent="alistamientos_menu_2" action="pseudouser_action_window"/>
    <menuitem name="Conductores" id="menu_driver_list" parent="alistamientos_menu_2" action="drivers_action_window"/>
    <menuitem name="Notificaciones" id="menu_notifications_list" parent="alistamientos_menu_2" action="notificaciones_action_window"/>
    <menuitem name="COVID" id="menu_covid_list" parent="alistamientos_menu_2" action="covid_action_window"/>
