<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_wialonuser_form_alistamientos">
            <field name="name">Vista usuario</field>
            <field name="model">gpscontrol.wialon_pseudouser</field>
            <field name="arch" type="xml">
                <form string="Usuarios">
                    <header>
                        <div class="oe_title">
                            <h1>Nombre: <field name="name" /></h1>
                        </div>

                    </header>
                    <sheet>
                        <group string="Campos ya existentes">
                            <field name="id_wia" />
                            <field name="emails" />
                            <field name="uacl" />
                            <field name="cls" />
                            <field name="crt" />
                            <field name="bact" />
                            <field name="units" />
                            <field name="conductores"/>
                        </group>
                        <group string="Campos nuevos test">
                            <field name="logo" widget="image" options="{'preview_image': 'logo'}" class="oe_avatar"/>
                            <field name="firma" widget="image" options="{'preview_image': 'firma'}" class="oe_avatar"/>
                            <field name="razonsocial"/>
                            <field name="website"/>
                            <field name="nit"/>
                            <field name="fuec_code_hab"/>
                            <field name="telefono"/>
                            <field name="fuec_resolucion"/>
                            <field name="email"/>
                            <field name="fuec_fecha_hab"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>